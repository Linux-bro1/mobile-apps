<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    android:background="#42A16D"
    tools:context=".FAQ">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="40dp"
        android:text="@string/qna"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:drawableTint="#FAF6F6" />

    <com.riyagayasen.easyaccordion.AccordionView
        android:id="@+id/ac1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#FAF3F3"
        android:visibility="visible"

        app:heading="What is Broadcast Intent "
        app:isAnimated="true"
        app:isExpanded="true"
        app:isPartitioned="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wh_br_intent"

            android:textSize="20sp" />
    </com.riyagayasen.easyaccordion.AccordionView>
    <com.riyagayasen.easyaccordion.AccordionView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:heading="What is Broadcast Receiver"

        app:isAnimated="true"
        app:isExpanded="false"
        app:isPartitioned="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wh_br_rec"
            android:textSize="20sp" />
    </com.riyagayasen.easyaccordion.AccordionView>
</LinearLayout>